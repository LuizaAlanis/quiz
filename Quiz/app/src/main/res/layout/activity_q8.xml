<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Q8Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jogador"
            android:textSize="20dp"
            android:textColor="#434343" />

        <TextView
            android:id="@+id/editTextNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome"
            android:textColor="#434343"
            android:layout_marginLeft="10dp"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Q8"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_margin="20dp"
        android:textColor="#434343" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >

        <RadioButton
            android:id="@+id/radioButton1Q8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Res1Q8" />

        <RadioButton
            android:id="@+id/radioButton2Q8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Res2Q8" />

        <RadioButton
            android:id="@+id/radioButton3Q8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Res3Q8" />

        <RadioButton
            android:id="@+id/radioButton4Q8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Res4Q8" />

        <RadioButton
            android:id="@+id/radioButton5Q8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Res5Q8" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonQ8"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="240dp"
        android:layout_width="127dp"
        android:textColor="#fff"
        android:background="@drawable/button"
        android:text="@string/Button1" />

</LinearLayout>